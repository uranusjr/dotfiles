	ad = add
	st = status
	ci = commit
	co = checkout
	unstage = reset HEAD --
	uncommit = reset HEAD^
	br = branch
	cp = cherry-pick
	dif = diff
	bf = "!f() { b=$(git symbolic-ref --short HEAD); git co -q $1; git br -f $b $1; git co $b; }; f" 
	rb = rebase
	amend = commit --amend --reuse-message=HEAD
	fixup = commit --amend --reuse-message=HEAD
